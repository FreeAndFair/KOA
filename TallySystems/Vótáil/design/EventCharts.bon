-- External (incoming) events

event_chart VOTAIL
incoming
indexing
  author: "Dermot Cochran";
  created: "2009-02-19-dc"
part
  "1/2"
event
  "Ballot counting starts"
involves
  COUNTING_PROCESS
event
  "Ballots are read into the system"
involves
  BALLOT_BOX
event
  "System is reset and list of candidates is loaded"
involves
  CANDIDATE_LIST
end

-- Internal (outgoing) events

event_chart VOTAIL
outgoing
indexing
  author: "Dermot Cochran";
  created: "2009-02-19-dc"
part
  "2/2"
event
  "One or more candidates are deemed elected"
involves
  CANDIDATE_LIST
event 
  "One or more candidates are excluded"
involves
  CANDIDATE_LIST
event
  "All seats are filled and counting is finished"
involves
  ELECTION_RESULTS
event
  "A round of counting is completed"
involves
  ELECTION_RESULTS
event
  "A surplus is distributed"
involves
  BALLOT_BOX
end