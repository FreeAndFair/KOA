<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app id="WebApp">
	<display-name>KOAWeb</display-name>
	<servlet>
		<servlet-name>KOAServicesRackServlet</servlet-name>
		<display-name>KOAServicesRackServlet</display-name>
		<servlet-class>ie.ucd.srg.koa.servlet.KOAServicesRackServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>KOAServlet</servlet-name>
		<display-name>KOAServlet</display-name>
		<servlet-class>ie.ucd.srg.koa.servlet.KOAServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>KOATicketServlet</servlet-name>
		<display-name>KOATicketServlet</display-name>
		<servlet-class>ie.ucd.srg.koa.ticket.KOATicketServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>KOAServlet</servlet-name>
		<url-pattern>/Login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>KOAServlet</servlet-name>
		<url-pattern>/KandidaatKeuze</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>KOAServlet</servlet-name>
		<url-pattern>/BevestigKeuze</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>KOAServlet</servlet-name>
		<url-pattern>/Transactieoverzicht</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>KOATicketServlet</servlet-name>
		<url-pattern>/Ticket</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>KOAServlet</servlet-name>
		<url-pattern>/AlreadyVoted</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
